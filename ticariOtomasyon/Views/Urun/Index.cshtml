@using ticariOtomasyon.Models.Siniflar
@model List<Urun>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />

<br />
@using (Html.BeginForm("Index", "Urun", FormMethod.Get))
    {
        <p>
            Ürün Adı : @Html.TextBox("p")
            <input type="submit" value="ara"></input>
        </p>

    }
<br />
<table class="table table-bordered">
    <tr>
        <th>Ürün</th>
        <th>Marka</th>
        <th>Stok</th>
        <th>Alış Fiyat</th>
        <th>Satış Fiyat</th>
        <th>Kategori</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var k in Model)
    {

        <tr>


            <td>
                @k.UrunAd
            </td>
            <td>@k.Marka</td>
            <td>@k.Stok</td>
            <td>@k.AlisFiyat ₺</td>
            <td>@k.SatisFiyat ₺</td>
            <td>@k.Kategori.KategoriAd</td>
            <td><a href="/Urun/UrunSil/@k.Urunid" class="btn btn-danger">Sil</a></td>
            <td><a href="/Urun/UrunGetir/@k.Urunid" class="btn btn-success">Güncelle</a></td>
        </tr>
    }

</table>

<a href="/Urun/YeniUrun" class="btn btn-info">Yeni Ürün</a>
