@using ticariOtomasyon.Models.Siniflar
@model List<FaturaKalem>
@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />

<h2>Fatura Kalemleri Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active"></li>
</ol>

<table class="table table-hover">
    <tr>
        <td>ID</td>
        <td>Açıklama</td>
        <td>Miktar</td>
        <td>Birim Fiyatı</td>
        <td>Tutar</td>

    </tr>
    @foreach (var s in Model)
    {
        <tr>
            <td>@s.FaturaKalemid</td>
            <td>@s.Aciklama</td>
            <td>@s.Miktar</td>
            <td>@s.BirimFiyat ₺</td>
            <td>@s.Tutar ₺</td>
        </tr>
    }
</table>
<a href="/Faturakalem/YeniKalem" class="btn btn-default" style="background-color:darksalmon">Yeni Kalem Girişi</a>

